<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Image principale -->
        <ImageView
            android:id="@+id/propertyImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img3"
            android:background="@drawable/rounded_top_shape" />

        <!-- Titre et emplacement -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/propertyTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/appartement_quip"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_location"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/propertyLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/taroudant_maroc"
                    android:textSize="16sp"
                    android:textColor="#8B0000" />
            </LinearLayout>
        </LinearLayout>

        <!-- Propriétaire -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F5F5F5"
            android:padding="35dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/ownerImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/img_1"
                android:background="@drawable/rounded_circle"
                android:layout_marginEnd="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/ownerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ahmed Chawi"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/ownerLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/propri_taire"
                    android:textSize="14sp"
                    android:textColor="#808080" />
            </LinearLayout>

            <!-- Icônes de contact -->
            <ImageView
                android:id="@+id/messageIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_message"
                android:layout_marginEnd="8dp"
                android:tint="#0088FF"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/callIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_call" />
        </LinearLayout>

        <!-- Spécifications -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specification"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <!-- Icônes de spécifications -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_wifi"
                android:layout_margin="8dp"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_parking"


                android:layout_margin="15dp"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/c_tv"


                android:layout_margin="15dp" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/img_3"
                android:layout_margin="8dp"
                android:tint="#8B0000"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/img_4"
                android:tint="#8B0000"
                android:layout_margin="15dp" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/img_3"
                android:tint="#8B0000"
                android:layout_margin="15dp" />
        </LinearLayout>

        <!-- Prix et bouton -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/propertyPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1000dh_mois"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_weight="1"
                tools:ignore="InefficientWeight" />

            <Button
                android:id="@+id/bookNowButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#8B0000"
                android:text="BOOK NOW"
                android:textColor="#FFFFFF"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginStart="16dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>