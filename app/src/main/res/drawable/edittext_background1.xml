<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#546E7A" />

    <!-- Rounded corners -->
    <corners android:radius="25dp" />

    <!-- Border color and width -->
    <stroke
        android:width="1dp"
        android:color="#B00020" />

    <!-- Padding around the content -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>


